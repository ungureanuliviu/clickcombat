<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background = "#f1f1f1">
	<RelativeLayout
		android:id = "@+id/layout_top"
		android:layout_width = "fill_parent"
		android:layout_height = "50dp"
		android:background = "#222222"
		android:layout_alignParentTop = "true">		
		<ImageButton
			android:id = "@+id/lt_but_home"
			android:layout_width = "30dp"
			android:layout_height = "fill_parent"
			android:src = "@drawable/icon_top_home"
			android:background = "#00000000"			
			android:layout_alignParentLeft = "true"
			android:layout_alignParentTop = "true"/>
		<View
			android:id = "@+id/lt_line_1"
			android:layout_width = "1dp"
			android:layout_height = "20dp"
			android:layout_centerVertical = "true"
			android:layout_toRightOf = "@id/lt_but_home"
			android:background = "#909090"/>			
		<TextView
			android:id = "@+id/lt_title"
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:text = "clickCombat"
			android:textColor = "#909090"
			android:textSize = "17sp"
			android:textStyle = "bold"
			android:layout_toRightOf = "@id/lt_line_1"
			android:layout_toLeftOf = "@+id/lt_line_2"
			android:layout_marginLeft = "5dp"
			android:layout_centerVertical = "true"/>
		<ImageButton
			android:id = "@+id/lt_but_info"
			android:layout_width = "30dp"
			android:layout_height = "fill_parent"
			android:src = "@drawable/icon_top_info"
			android:background = "#00000000"		
			android:layout_alignParentRight = "true"
			android:layout_alignParentTop = "true"/>									
	</RelativeLayout>	
	<RelativeLayout
		android:id = "@+id/layout_content"
		android:layout_width  = "fill_parent"
		android:layout_height = "fill_parent"
		android:layout_below = "@id/layout_top"
		android:layout_margin = "10dp">
		<TextView
			android:id = "@+id/login_static_1"
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:text = "Username"
			android:textSize ="12sp"
			android:textColor = "#222222"
			android:layout_alignParentTop = "true"
			android:layout_alignParentLeft = "true"/>
		<liviu.apps.clickcombat.ui.LEditText
			android:id = "@+id/login_edtx_username"
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:layout_below = "@id/login_static_1"
			android:layout_alignParentLeft = "true"
			android:layout_marginTop = "5dp"
			android:text = "liviu"  
			android:paddingLeft = "10dp"
			android:drawableRight = "@drawable/x"
			android:background = "@drawable/edtxt_background"/>
		<TextView
			android:id = "@+id/login_static_2"
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:text = "Password"
			android:textSize ="12sp"
			android:textColor = "#222222"
			android:layout_below = "@id/login_edtx_username"
			android:layout_marginTop = "5dp"
			android:layout_alignParentLeft = "true"/>
		<liviu.apps.clickcombat.ui.LEditText
			android:id = "@+id/login_edtx_password"
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:layout_below = "@id/login_static_2"
			android:layout_alignParentLeft = "true"
			android:layout_marginTop = "5dp"
			android:text = "test"
			android:inputType = "textPassword"
			android:paddingLeft = "10dp"
			android:drawableRight = "@drawable/x"
			android:background = "@drawable/edtxt_background"/>			
		<Button
			android:id = "@+id/login_button_login"
			android:layout_width = "90dp"
			android:layout_height = "wrap_content"
			android:text = "Login"
			android:padding = "10dp"
			android:layout_alignParentLeft = "true"
			android:layout_below = "@id/login_edtx_password"
			android:layout_marginTop = "8dp"
			android:textColor = "#ffffff"
			android:background = "@drawable/button_background"/>
		<Button
			android:id = "@+id/login_button_sign_up"
			android:layout_width = "90dp"
			android:layout_height = "wrap_content"
			android:text = "Sign up"
			android:padding = "10dp"
			android:layout_centerHorizontal = "true"
			android:layout_below = "@id/login_edtx_password"
			android:layout_marginTop = "8dp"
			android:textColor = "#ffffff"
			android:background = "@drawable/button_background"/>			
		<Button
			android:id = "@+id/login_button_later"
			android:layout_width = "90dp"
			android:layout_height = "wrap_content"
			android:text = "Later"
			android:padding = "10dp"
			android:layout_alignParentRight = "true"
			android:layout_below = "@id/login_edtx_password"
			android:layout_marginTop = "8dp"
			android:textColor = "#ffffff"
			android:background = "@drawable/button_background"/>				
	</RelativeLayout>
</RelativeLayout>
